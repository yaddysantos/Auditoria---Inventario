<div class="row justify-content-center">
  <div class="col-sm-11">
    <header class="title">
  <div class = "col-title">
    <h3 class="text-center"> <strong>Información del formulario de la empresa</strong></h3>
  </div>
</header>
  <table class="table table-striped">
      <thead>
        <tr>
          <th style="text-align:center;">NIT</th>
          <th style="text-align:center;">Empresa</th>
          <th style="text-align:center;">Gerente</th>
          <th style="text-align:center;">Dirección</th>
          <th style="text-align:center;">Telefono</th>
          <th colspan="2" style="text-align:center;">Operaciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each clientes}}
        <tr>
          <td style="text-align:center;">{{this.nits}}</td>
          <td style="text-align:center;">{{this.nombres}}</td>
          <td style="text-align:center;">{{this.gerentes}}</td>
          <td style="text-align:center;">{{this.direcciones}}</td>
          <td style="text-align:center;">{{this.telefonos}}</td>
          <td style="text-align:center;"><a href="/cliente/modificar/{{this._id}}">Modificar</a></td>
           <td style="text-align:center;"><a href="/cliente/eliminar/{{this._id}}">Eliminar</a></td>
           {{!-- <td style="text-align:center;"><a href="/tabla/graficar/">Graficar</a></td> --}}
        </tr>
        {{/each}}
      </tbody>
  </table>
  </div>
</div>
<br>